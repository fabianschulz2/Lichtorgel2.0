<Page x:ConnectionId='1'
    x:Class="Lichtorgel2._0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="mainGrid">
        <ComboBox x:ConnectionId='3' x:FieldModifier="public" x:Name="songSelect" Header="Wähle eine Audiodatei"                                Margin="0,-200,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" FontSize="24"/>
        <TextBlock x:ConnectionId='4' x:Name="Header" Margin="0,0,0,0" Text="Lichtorgel" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="72" HorizontalAlignment="Center"/>
        <ToggleSwitch x:ConnectionId='5' x:Name="toggleMic" Header="Mikrofon"                            IsOn="False" FontSize="24" HorizontalAlignment="Center" Margin="400,0,0,0" Width="100"/>
        <ToggleSwitch x:ConnectionId='6' x:Name="toggleFile" Header="Datei"                             IsOn="False" FontSize="24" HorizontalAlignment="Center" Margin="-400,0,0,0" Width="100"/>
    </Grid>
</Page>

